<form method="POST" enctype="multipart/form-data" class="mt-5">
  <div class="form-group">
      <label for="inputTitle">Заголовок</label>
      <input type="text"
             value="<%= book.title %>"
             name="title"
             class="form-control"
             id="inputTitle">
  </div>

  <div class="form-group">
    <label for="inputAuthor">Автор</label>
    <input type="text"
           value="<%= book.authors %>"
           name="authors"
           class="form-control"
           id="inputAuthor">
  </div>

  <div class="form-group">
    <label for="inputFavorite">Жанр</label>
    <input type="text"
          value="<%= book.favorite %>"
          name="favorite"
          class="form-control"
          id="inputFavorite">
  </div>

  <input name="fileBook" type="file">
  <div class="form-group">
      <label for="inputDesc">Описание</label>
      <textarea
              rows="3"
              name="description"
              class="form-control"
              id="inputDesc"
      ><%= book.description %></textarea>
  </div>

  <div class="form-group text-right ">
      <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>